<%- include('../components/layout') %>
<div class="container">
  <div class="row">
    <table class='table table-bordered table-hover center'>
      <thead>
        <tr>
          <th>电影名字</th>
          <th>导演</th>
          <th>国家</th>
          <th>语言</th>
          <th>上映年份</th>
          <th>录入时间</th>
          <th>查看</th>
          <th>更新</th>
          <th>删除</th>
        </tr>
      </thead>
      <tbody>
        <% movies.forEach((item) => { %>
          <tr class='item-id-<%= item._id %>'>
            <td><%= item.title %></td>
            <td><%= item.doctor %></td>
            <td><%= item.country %></td>
            <td><%= item.language %></td>
            <td><%= item.year %></td>
            <td><%= moment(item.meta.updateAt).format('MM/DD/YYYY')%></td>
            <td><a href="/movie/<%= item._id %>" target='_blank'>查看</a></td>
            <td><a href="/admin/movie/update/<%= item._id %>">修改</a></td>
            <td><button type="button" class='btn btn-danger delMovie' data-id='<%= item._id %>'>删除</button></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
<script src="/js/admin.js"></script>